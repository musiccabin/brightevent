<%if obj.errors.any? %>
    <div class="row">
        <div class="col-sm-10">
            <div class="alert alert-danger">
                <div class="alert-heading">
                    <h2 class="alert-title" align="center">
                        <%=pluralize(obj.errors.count, "error")%>
                        prohibited signing-up:
                    </h2>
                    <div class="alert-body">
                        <ul>
                            <% obj.errors.full_messages.each do |msg|%>
                            <li><%= msg %></li>
                            <%end%>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%end%>