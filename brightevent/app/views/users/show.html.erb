<h1 align="center">Welcome to <%= @user.full_name %>'s page</h1>
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <% if @user.img_url.nil? %>
            <%= gravatar_for @user, size: 150 %>
        <% else %>
            <%= image_tag(@user.img_url) %>
        <% end %>
        <button class="btn btn-secondary">
            <%= link_to "Edit Profile", edit_user_path, class: "text-white" %>
        </button>
    </div>
</div>
<h4 align="center"><%= @user.full_name %>'s events</h4>
<div class="center">
    <% if !@user.tags.nil? %>
        <div class="tags-container">
            <% @user.tags.each do |tag| %>
                <p class="badge badge-pills badge-primary"><%= tag.name %></p>
            <% end %>
    <% end %>

</div>
<%= render 'events/event', obj:@user.events %>
<div class="center">

</div>
    