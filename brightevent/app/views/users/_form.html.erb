<div class='row new_form'>

  <div class='col-md-10 offset-2'>

    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">

      <div class="control-label col-sm-8">

        <%= f.label :first_name %>

      </div>

      <div class="col-md-8">

        <%= f.text_field :first_name, class: "form-control", placeholder: "Enter username", autofocus: true %>

      </div>
      <div class="control-label col-sm-8 mt-3">

        <%= f.label :last_name %>

      </div>

      <div class="col-md-8">

        <%= f.text_field :last_name, class: "form-control", placeholder: "Enter username", autofocus: true %>

      </div>

    </div>

    <div class="form-group">

      <div class="control-label col-sm-2  mt-3">

        <%= f.label :email %>

      </div>

      <div class="col-sm-8">

        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>

      </div>

    </div>

    <div class="form-group">

      <div class="control-label col-sm-2 mt-3">

        <%= f.label :password %>

      </div>

      <div class="col-sm-8">

        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>

      </div>

      <div class="control-label col-sm-2 mt-3">

        <%= f.label :password_confirmation %>

      </div>
      <div class="col-sm-8">

        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password" %>

      </div>

    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Tags%>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :tag_names, class: "form-control", placeholder: "Your interests" %>
      </div>
    </div>

    <div class="form-group">

      <div class="col-sm-offset-2 col-sm-10">

        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg offset-3') %>

      </div>

    </div>

    <% end %>

    <div class="col-xs-4 col-xs-offset-4">


    </div>

  </div>

</div>

