<div class="col-md-4 offset-4 center mt-3">
  <% if @user.img_url.nil? %>
  <%= gravatar_for @user, size: 150 %>
  <% else %>
  <%= image_tag(@user.img_url) %>
  <% end %>
</div>


<%= form_for(@user, :html => {class: " container card col-12 col-md-10 col-lg-8 mt-3 mb-5", role: "form"}) do |f| %>
<div class="form-row mb-4">

  <div class="col">
    <%=f.label :first_name, class:"mt-3" %>
    <%= f.text_field :first_name, class: "form-control", placeholder: "Enter first name", autofocus: true %>
  </div>
  <div class="col">
    <%=f.label :last_name, class:"mt-3"  %>
    <%= f.text_field :last_name,class:"form-control",placeholder:"Enter last name",autofocus:true %>
  </div>
</div>

<div class="form-row mb-4">
  <div class="col">
    <%=f.label :password %>
    <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
  </div>
  <div class="col">
    <%=f.label :password_confirmation %>
    <%= f.password_field :password_confirmation,class:"form-control",placeholder:"Confirm Password",autofocus:true %>
  </div>
</div>

<div class="form-row mb-4">
  <div class="col">
    <%=f.label :email %>
    <%= f.email_field  :email,class:"form-control",placeholder:"Enter email",autofocus:true %>
  </div>
  <div class="col">
    <%=f.label :tags %>
    <%= f.text_field :tag_names, class: "form-control", placeholder: "Enter tags", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="offset-2 col-sm-8">
    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg offset-3') %>
  </div>
</div>



<%end%>