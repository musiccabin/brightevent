<%= render 'shared/error'%>
<%=form_for(@event, :html => {class: "container card card-body col-12 col-md-8 col-lg-6 mt-5 mb-5",role: "form"}) do |f| %>

<div class="form-row mb-4">
  <div class="col">
    <%=f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter title", autofocus: true %>
  </div>
  <div class="col">
    <%=f.label :date %>
    <%= f.date_field :date,class:"form-control",placeholder:"data",autofocus:true %>
  </div>
</div>

<div class="form-row mb-4">
  <div class="col">
    <%=f.label :where %>
    <%= f.text_field :where, class: "form-control", placeholder: "Enter location", autofocus: true %>
  </div>
  <div class="col">
    <%=f.label :image %>
    <%= f.url_field :img_url,class:"form-control",placeholder:"img",autofocus:true %>
  </div>
</div>

<div class="form-group tag-description">
  <div class="control-label col-sm-2">
    <%= f.label :tags %>
  </div>
  <div class="col-sm-10 mb-3">
    <%= f.text_field :tag_names,class:"form-control",placeholder:"tags",autofocus:true %>
  </div>

  <div class="control-label col-md-6">
    <%= f.label :description %>
  </div>
  <div class="col-sm-10">
    <%= f.text_area :description,rows:10,class:"form-control",placeholder:"body",autofocus:true %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-8 create-event-btn">
    <%= f.submit class:"btn btn-primary btn-lg offset-4 mr-5"%>
  </div>
</div>

<%end%>
<div class="col-md-4 offset-4 mb-4">
  [<%=link_to"cancel request and return event listing",events_path %>]
</div>
</div>