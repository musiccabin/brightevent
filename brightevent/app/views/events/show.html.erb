<div class="card mt-5">
    <h2 align="center" class="mt-5">Title:<%=@event.title%></h2>

    <img src="https://i.imgur.com/FCOtmUp.jpg" alt="" width="420" height="350">
    <div class="well col-xs-8 col-xs-offset-2">
        <% if @event.user %>
        <ul class="listing">
            <div class="row center">
                <div class=" col-md-4 col-md-offset-4">
                    <li> Create by: </li>
                    <li class="event-title">
                        <%= link_to @event.user.full_name, user_path(@event.user)%>
                    </li>
                    <li><small><%=pluralize(@event.user.events.count,"event")if @event.user.events %></small></li>
                </div>
                <div class="tags-container">
                    <% if !@event.tags.nil? %>
                        <h2> Tags </h2>
                        <% @event.tags.each do |tag| %>
                            <p class="badge badge-pill badge-primary"><%= link_to tag.name, "/events?tag_name=#{tag.name}"%></p>
                        <% end %>
                    <% end %>
                </div>
                <div class=" col-md-4 col-md-offset-4">
                    <li> <%=@event.rsvps.count%> going </li>
                </div>
            </div>
        </ul>
        <% end %>
        <h4 class="center description"><strong>Description: </strong></h4>

<h2 align="center">Title:<%=@event.title%></h2>
<div class="well col-xs-8 col-xs-offset-2">
<% if @event.user %>
<ul class="listing">
    <div class ="row center">
    <div class=" col-md-4 col-md-offset-4">
    <li> Create by: </li>
    <li><%=link_to gravatar_for(@event.user), user_path(@event.user)%></li>
    <li class ="event-title">
    <%= link_to @event.user.full_name, user_path(@event.user)%>
    <% if can? :rsvp, @event %>
    <% if @event&.rsvps&.find_by(user: current_user)%>
    <%rsvp = @event.rsvps.find_by(user: current_user)%>
    <%=link_to 'Leave Event',  event_rsvp_path(@event, rsvp), method: :delete, class: "btn btn-primary"%>
    <%else%>
    <%=link_to 'Join Event',  event_rsvps_path(@event), method: :post, class: "btn btn-primary"%>
    <%end%>
    <%end%>
    </li>
    <li><small><%=pluralize(@event.user.events.count,"event")if @event.user.events %></small></li>
    </div>
    </div>
    </ul>
    <%end%>
<h4 class="center description"><strong>Description: </strong></h4>
<hr>
<%= simple_format(@event.description)%>
<div class="event-action">
  <% if  user_signed_in? && (current_user == @event.user) %>
  <%= link_to "edit this event",edit_event_path(@event),class:"btn btn-xs btn-primary"%>   
  <%= link_to "delete this event", event_path(@event), method: :delete, 
                                    data:{confirm:"are you sure want to delete the event"}, 
                                    class:"btn btn-xs btn-danger"%>
            <%= link_to "view all events",events_path,class: "btn btn-xs btn-success" %>
            <% end%>
        </div>

    </div>
</div>