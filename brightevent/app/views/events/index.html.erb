<div class="container">
  <h1 class="product-index mt-5 mb-3" align="center">All EVENTS</h1>
  <h3 class="ml-3 mt-5"> <%=@events.count%> events found </h3>

  <div class="dropdown">
    <button class="btn btn-primary dropdown-toggle ml-3 mb-4 mt-3" type="button" data-toggle="dropdown"
      data-hover="dropdown">
      Filters <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li> <%=render "filter"%></li>
    </ul>
  </div>

  <div class="row">
    <% @events.each do |event| %>
    <div class="card ml-5 mt-3 mb-4 cardindex" style="width: 19rem;">
      <%= link_to event_path(event) do %>
      <img class="card-img-top" src="<%=event.img_url%>" alt="Card image cap" width="350" height="270">
      <%end%>
      <div class="card-body cardbody">
        <h5 class="card-title"><%=  event.title %></h5>
        <small><%= event.rsvps.count %> going</small>
        <p class="card-text"><%= event.description %></p>
        <p class="card-text"> <%=event.date%> </p>
        <p class="card-text"> <%= event.where%> </p>

        <%=link_to 'View Event',  event_path(event), class: "btn btn-primary"%>

      </div>
    </div>
    <% end %>
    <div class="container pagination justify-content-center mt-3">
      <%= paginate @events, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
    </div>
  </div>
</div>

