<div class="container">
    <h1 class="product-index mt-4 mb-4" align="center">All EVENTS</h1>
    <div class="row">
        <% @events.each do |event| %>
        <div class="card ml-5 mt-5 mb-5" style="width: 19rem;">
            <%= link_to event_path(event) do %>
            <img class="card-img-top" src="<%=event.img_url%>" alt="Card image cap" href>
            <%end%>
            <div class="card-body cardbody">
                <h5 class="card-title"><%=  link_to event.title, event_path(event) %></h5>
                <p class="card-text"><%= event.description %></p>
                <a href="#" class="btn btn-primary">Join Event</a>
            </div>
        </div>
        <% end %>
        <div class="container pagination justify-content-center">
            <%= paginate @events, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
        </div>
    </div>
</div>