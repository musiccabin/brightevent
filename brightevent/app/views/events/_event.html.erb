<% obj.each do |event| %>
<div class="row ">
  <div class="col-sm-10 ml-4">
    <div class="well well-lg">

      <div class="event-title" align="center">
        <%= link_to event.title, event_path(event) %>
      </div>

      <div class="event-body">
        <%= truncate(event.description, length: 100) %>
        <div class="event-meta-details">

          <small>Created by: <%= event.user.full_name if event.user%>,

            <%= time_ago_in_words(event.created_at) %> ago,
            last updated: <%= time_ago_in_words(event.updated_at) %> ago</small>
        </div>

      </div>
      <% if user_signed_in?&& (current_user ==event.user ) %>
      <div class="event-actions">

        <%= link_to "Edit", edit_event_path(event) %> |

        <%= link_to "Delete", event_path(event), method: :delete,
  
  data: { confirm: "Are you sure you want to delete the event?"}, class:"right" %>

      </div>
      <% end %>

    </div>

  </div>

</div>

<% end %>