<div class="row new_form">
  <div class="col-md-12">
    <%=form_with url: filter_events_path, :html => {class:"",role: "form"}, local: true  do |f| %>

    <div class="form-row mb-4">
      <div class="col">
        <%=f.label :date_from %>
        <%= f.date_field :date_from, class: "form-control", placeholder: "data", autofocus: true %>
      </div>
      <div class="col">
        <%=f.label :date_to %>
        <%= f.date_field :date_to,class:"form-control",placeholder:"data",autofocus:true %>
      </div>
    </div>

    <div class="form-row mb-4">
      <div class="col">
        <%=f.label :where %>
        <%= f.text_field :where, class: "form-control", placeholder: "location", autofocus: true %>
      </div>
      <div class="col">
        <%=f.label :tag_names %>
        <%= f.text_field :tag_names,class:"form-control",placeholder:"tag",autofocus:true %>
      </div>
    </div>

    <div class="form-row mb-4">
      <div class="col">
        <%=f.label :min_people_going %>
        <%= f.text_field :minimum_number_of_people_going, class: "form-control", placeholder: "Enter a number", autofocus: true %>
      </div>
      <div class="col">
        <%=f.label :max_people_going %>
        <%= f.text_field :maximum_number_of_people_going,class:"form-control",placeholder:"Enter a number",autofocus:true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class:"btn btn-primary btn-lg offset-3"%>
      </div>
    </div>

    <%end%>
  </div>
</div>